@model List<OnlineShop.Models.Пункты_выдачи>

<!DOCTYPE html>
<html>
<head>
    <title>Список пунктов выдачи</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #333;
            margin: 0;
            padding: 0;
            color: #fff;
        }

        h2 {
            text-align: center;
            margin-top: 50px;
            color: #fff;
        }

        .table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 10px;
                border: 1px solid #fff;
            }

            .table th {
                background-color: #555;
                color: #fff;
            }

            .table td {
                background-color: #777;
                transition: background-color 0.3s ease; /* Добавляем анимацию перехода */
            }

                .table td:hover {
                    background-color: #999; /* Подсвечиваем ячейку при наведении */
                }

        .no-points {
            text-align: center;
            margin-top: 20px;
            color: #fff;
        }

        .return-button {
            display: block;
            width: 150px;
            margin: 20px auto;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #555;
            color: #fff;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .return-button:hover {
                background-color: #777;
            }
    </style>
</head>
<body>
    <h2>Список пунктов выдачи</h2>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Код пункта выдачи</th>
                    <th>Адрес</th>
                    <th>Оборот заказов</th>
                    <th>Рейтинг пункта выдачи</th>
                    <th>Количество доступных мест</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var point in Model)
                {
                    <tr>
                        <td>@point.Код_Пункта_выдачи</td>
                        <td>@point.Адрес</td>
                        <td>@point.Оборот_заказов</td>
                        <td>@point.Рейтинг_пункта_выдачи</td>
                        <td>@point.Количество_доступных_мест</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-points">Нет доступных пунктов выдачи.</p>
    }

    <a href="/MenuAdmin" class="return-button">Вернуться в меню администратора</a>
</body>
</html>
