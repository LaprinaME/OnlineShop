@model OnlineShop.ViewModels.RegisterViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Регистрация</title>
    <style>
        body {
            background-image: url("../images/register.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: 'Anonymous Pro', monospace;
        }

        .register-container {
            margin: 100px auto; /* Устанавливаем отступы от краев страницы */
            padding: 20px; /* Добавляем внутренний отступ */
            width: 50%; /* Устанавливаем ширину контейнера */
            background-color: rgba(255, 255, 255, 0.8); /* Добавляем полупрозрачный белый фон */
            border-radius: 10px; /* Делаем скругленные углы */
            text-align: center; /* Выравниваем текст по центру */
        }

            .register-container h2 {
                margin-bottom: 20px; /* Добавляем отступ снизу для заголовка */
            }

            .register-container form {
                display: inline-block; /* Размещаем форму в центре контейнера */
                text-align: left; /* Выравниваем текст в форме слева */
            }

                .register-container form div {
                    margin-bottom: 15px; /* Добавляем отступ между элементами формы */
                }

        .validation-message {
            color: red; /* Цвет сообщения об ошибке */
        }

        .button-container {
            text-align: center; /* Выравниваем кнопку по центру */
            margin-top: 20px; /* Добавляем отступ сверху */
        }

            .button-container .return-button {
                padding: 10px 20px; /* Задаем размеры кнопки */
                background-color: #333; /* Цвет фона кнопки */
                color: #fff; /* Цвет текста кнопки */
                border: none; /* Убираем границу */
                border-radius: 5px; /* Делаем скругленные углы */
                cursor: pointer; /* Устанавливаем указатель при наведении */
                transition: background-color 0.3s ease; /* Плавное изменение цвета фона */
                margin-top: 20px;
            }

                .button-container .return-button:hover {
                    background-color: #555; /* Изменяем цвет фона при наведении */
                }
    </style>
</head>
<body>
    <div class="register-container">
        <h2>Регистрация</h2>
        <form asp-action="Register" method="post">
            <div>
                <label asp-for="Login">Логин:</label>
                <input asp-for="Login" />
                <span class="validation-message" asp-validation-for="Login"></span>
            </div>
            <div>
                <label asp-for="Password">Пароль:</label>
                <input asp-for="Password" type="password" />
                <span class="validation-message" asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль:</label>
                <input asp-for="ConfirmPassword" type="password" />
                <span class="validation-message" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <label asp-for="RoleCode">Введите код роли:</label>
                <input asp-for="RoleCode" />
                <span class="validation-message" asp-validation-for="RoleCode"></span>
            </div>
            <div>
                <label asp-for="UserCode">Введите код пользователя:</label>
                <input asp-for="UserCode" />
                <span class="validation-message" asp-validation-for="UserCode"></span>
            </div>
            <div class="button-container">
                <button type="submit" class="return-button">Зарегистрироваться</button>
            </div>
        </form>
    </div>
    <div class="button-container">
        <form method="get" action="/Home/Index">
            <button type="submit" class="return-button">Вернуться на главную страницу</button>
        </form>
    </div>
</body>
</html>
